{{> header}}

<form action="" method="post" enctype="multipart/form-data">
         <fieldset>
            <table>
               <tbody id="newinput">
                <tr>
                    <td class="col1"><label for="name" class="name">Gallery Name</label></td>
                    <td class="col2"><input type="text" class="col2" id="name" name="name" placeholder="Enter Gallery Name" />
                    </td>

                </tr>

                <tr>
                    <td class="col1"><label for="author" class="name">Author</label></td>
                    <td class="col2"><input type="text" class = "col2" id="author" name="author" placeholder="Enter Author Name" />
                    </td>
                </tr>

                <tr>
                    <td class="col1"><label for="mainimg" class="name">Main Image</label></td>
                    <td class="col2"><input type="url" class="col2" id="mainimg" name="mainimg" placeholder="Enter a URL"></input>
                    </td>

                </tr>

                <tr>
                   <td class="col1"></td>
                   <td class="col2">
                      <button id="addbutton" type="button" for="additionalimgs" class="add-image"><i class="fa fa-plus" aria-hidden="true"></i>Add additional Image</button>

                      <button id="removebutton" type="button" for="additionalimgs" class="remove-image"><i class="fa fa-minus" aria-hidden="true"></i>Remove Previous Image</button>
                   </td>
                </tr>
               </tbody>

              </table>

              <div class="button-container">
                <input type="submit" class="submit" value="Submit Gallery" />
              </div>
         </fieldset>
      </form>
<script type="text/javascript" src="/addGallery.js" charset="utf-8"></script>
